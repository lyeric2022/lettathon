{
  "name": "catfish-client",
  "version": "0.1.0",
  "description": "Catfish AI Assistant - Desktop Client",
  "main": "dist/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc && NODE_ENV=development electron dist/main/main.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/",
    "test": "jest",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.0",
    "framer-motion": "^11.5.0",
    "keytar": "^7.9.0",
    "node-record-lpcm16": "^1.0.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hotkeys-hook": "^4.5.0",
    "styled-components": "^6.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/styled-components": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^8.2.0",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.0"
  },
  "build": {
    "appId": "com.catfish.assistant",
    "productName": "Catfish AI Assistant",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  },
  "homepage": "https://github.com/your-org/catfish#readme"
}
