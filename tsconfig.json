{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@client/*": ["./client/src/*"],
      "@server/*": ["./server/src/*"],
      "@agent/*": ["./agent/src/*"]
    },
    "composite": true
  },
  "include": [
    "client/src/**/*",
    "server/src/**/*",
    "agent/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "release"
  ],
  "references": [
    { "path": "./client" },
    { "path": "./server" },
    { "path": "./agent" }
  ]
} 